[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PostGraphile"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DirectPostgresProxy"

[[workflows.workflow]]
name = "HugMeNow"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-hugmenow.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "RestartHugMeNow"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash restart-app.sh"

[[workflows.workflow]]
name = "PostGraphile"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-postgraphile.sh"
waitForPort = 3003

[[workflows.workflow]]
name = "DirectPostgresProxy"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-direct-postgres-proxy.sh"
waitForPort = 3006
