modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd hugmenow/web && npm run build && npm run preview"]

[[ports]]
localPort = 3000

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 3003
externalPort = 3003

[[ports]]
localPort = 3004
externalPort = 8000

[[ports]]
localPort = 3005
externalPort = 5173

[[ports]]
localPort = 3006
externalPort = 9000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 8099

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5005
externalPort = 4200

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PostGraphile"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DirectPostgresProxy"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DirectTest"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleProxy"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AuthTest"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow"

[[workflows.workflow]]
name = "RestartHugMeNow"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash restart-app.sh"

[[workflows.workflow]]
name = "PostGraphile"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x start-postgraphile.sh && ./start-postgraphile.sh"
waitForPort = 3003

[[workflows.workflow]]
name = "DirectPostgresProxy"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node direct-postgres-proxy.js"
waitForPort = 3006

[[workflows.workflow]]
name = "DirectTest"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node direct-test-server.js"
waitForPort = 5005

[[workflows.workflow]]
name = "SimpleProxy"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-proxy-server.js"
waitForPort = 3005

[[workflows.workflow]]
name = "AuthTest"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node auth-test.cjs"
waitForPort = 5001

[[workflows.workflow]]
name = "AdvancedFrontend"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[[workflows.workflow]]
name = "HugMeNow"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x start-hugmenow-optimized.sh && ./start-hugmenow-optimized.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "HugMeNowDev"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/web && npm run dev"

[[workflows.workflow]]
name = "HugMeNowDevWithAPI"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5173\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5174\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/api && PORT=3002 node simplified-server.mjs &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/web && npm run dev"

[[workflows.workflow]]
name = "HugMeNowComplete"
author = 40513268
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5173\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*5174\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"postgraphile-server.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"direct-postgres-proxy.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2 "

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node postgraphile-server.js "

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node direct-postgres-proxy.js "

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/api && PORT=3002 node simplified-server.mjs "

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/web && PORT=5000 npm run dev"

