modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "HugMeNow Full Stack"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start-hugmenow.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow Full Stack"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow Health Monitor"

[[workflows.workflow]]
name = "HugMeNow Health Monitor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -fs http://localhost:5000/health-check > /dev/null && curl -fs http://localhost:3001/health > /dev/null && echo \"Health checks passed: $(date)\" || echo \"Health checks failed: $(date)\""

[deployment]
run = ["sh", "-c", "cd hugmenow/web && npm run build && npm run preview"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 4000
externalPort = 4200

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5173
