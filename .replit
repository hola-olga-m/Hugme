modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd hugmenow/web && npm run build && npm run preview"]

[[ports]]
localPort = 3000
externalPort = 6800

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 3003
externalPort = 3003

[[ports]]
localPort = 3004
externalPort = 6000

[[ports]]
localPort = 3005
externalPort = 5173

[[ports]]
localPort = 3006
externalPort = 9000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 8099

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5005
externalPort = 4200

[[ports]]
localPort = 5173
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PostGraphile"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DirectPostgresProxy"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FixedServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DirectTest"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleProxy"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FeedbackTest"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleTest"

[[workflows.workflow]]
name = "RestartHugMeNow"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash restart-app.sh"

[[workflows.workflow]]
name = "PostGraphile"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-postgraphile.sh"
waitForPort = 3003

[[workflows.workflow]]
name = "DirectPostgresProxy"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-direct-postgres-proxy.sh"
waitForPort = 3006

[[workflows.workflow]]
name = "FixedServer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node fixed-server.js"
waitForPort = 5002

[[workflows.workflow]]
name = "DirectTest"
author = "agent"

[workflows.workflow.metadata]
