modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd hugmenow/web && npm run build && npm run preview"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 3003
externalPort = 3003

[[ports]]
localPort = 4000
externalPort = 4200

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001

[[ports]]
localPort = 5002
externalPort = 5173

[[ports]]
localPort = 5173
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SyncGraphQLSchema"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PostGraphile"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CustomGraphQLGateway"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleGraphQLGateway"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DirectApolloGateway"

[[workflows.workflow]]
name = "SyncGraphQLSchema"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash schema-sync-workflow.sh"

[[workflows.workflow]]
name = "PostGraphile"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node postgraphile-server.js"
waitForPort = 3003

[[workflows.workflow]]
name = "HugMeNow"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-hugmenow.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "FixGraphQL"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node fix-graphql.js"

[[workflows.workflow]]
name = "FixAndRunApp"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node fix-graphql.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-hugmenow.sh"

[[workflows.workflow]]
name = "RestartHugMeNow"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash restart-app.sh"

[[workflows.workflow]]
name = "FixAndRestartHugMeNow"
author = 40513268
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash restart-app.sh"

[[workflows.workflow]]
name = "CustomGraphQLGateway"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-custom-gateway.sh"
waitForPort = 5002

[[workflows.workflow]]
name = "SimpleGraphQLGateway"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-simple-gateway.sh"
waitForPort = 5000

[[workflows.workflow]]
name = "DirectApolloGateway"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-direct-apollo.sh"
waitForPort = 5001
