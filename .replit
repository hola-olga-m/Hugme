modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "HugMeNow Full Stack"
author = "agent"
mode = "sequential"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start-hugmenow.sh"

[[workflows.workflow]]
name = "HugMeNow Full Stack"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/web && node simple-server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow Full Stack"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "HugMeNow Frontend"

[[workflows.workflow]]
name = "HugMeNow Frontend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/web && node cjs-server.cjs"
waitForPort = 5000

[[workflows.workflow]]
name = "HugMeNow API Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd hugmenow/api && node dist/main.js"
waitForPort = 3001

[deployment]
run = ["sh", "-c", "cd hugmenow/web && npm run build && npm run preview"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 4000
externalPort = 4200

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5173
